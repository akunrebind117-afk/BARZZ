    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('Nomor berhasil disalin: ' + text);
            }, function(err) {
                alert('Gagal menyalin nomor: ', err);
            });
        }
    </script>
